<h1 class="font-bold text-2xl mb-3">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mt-6 flex gap-x-6">
    <%= f.email_field :email,  placeholder: "Email", class: "inline-block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-96", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mt-6 flex gap-x-6">
    <%= f.password_field :password,  placeholder: "Password", class: "inline-block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-96" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mt-6 flex gap-x-6">
      <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="mb-3"></div>

  <div class="inline-block ml-2">
    <%= f.submit "Log in", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
  </div>

  <div class="inline-block ml-2">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-7000" %>
  </div>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end %>

<% end %>
